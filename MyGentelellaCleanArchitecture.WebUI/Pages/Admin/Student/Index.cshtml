@page
@model MyGentelellaCleanArchitecture.WebUI.Pages.Admin.Student.IndexModel
@{
    ViewData["Title"] = "List Of Students";
}

<div class="border backgroundWhite container shadow" style="margin-top:70px;">

    <div class="row"> 
        <div class="col-12"><h1 class="text-success">Student List</h1></div>
    </div>

    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="/Admin/Student/Upsert" class="btn btn-success"><i class="fas fa-plus-circle">&nbsp;Create new record</i></a>
        </div>
    </div>

    <br /><br />
    <div class="table-responsive">
        <table id="DT_load" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Fullname</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Date Enrolled</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{
    <script src="~/js/students.js"></script>
}