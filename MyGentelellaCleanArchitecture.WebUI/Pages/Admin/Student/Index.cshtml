@page
@model MyGentelellaCleanArchitecture.WebUI.Pages.Admin.Student.IndexModel
@{
    ViewData["Title"] = "List Of Students";
}

<div class="border backgroundWhite container shadow mt-5">

    <h1 class="text-primary">Student List</h1>

    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="/admin/employee/upsert" class="btn btn-outline-primary"><i class="fa fa-plus">&nbsp;Create new record</i></a>
        </div>
    </div>

    <br /><br />
    <div class="table-responsive">
        <table id="DT_load" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Gender</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{
    <script src="~/js/employees.js"></script>
}