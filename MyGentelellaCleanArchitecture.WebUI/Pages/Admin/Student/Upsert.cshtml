@page
@model MyGentelellaCleanArchitecture.WebUI.Pages.Admin.Student.UpsertModel
@{
    if (Model.StudentObj.StudentId != 0)
    {
        ViewData["Title"] = "Update new student";
    }
    else
    {
        ViewData["Title"] = "Create new student";
    }
}

<form method="post" asp-page="upsert">
    <div class="container">
        @if (Model.StudentObj.StudentId != 0)
        {
            <input type="hidden" asp-for="@Model.StudentObj.StudentId" />
        }
        <div class="row px-2 mx-2 backgroundWhite border shadow" style="height:400px;">
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-success">@(Model.StudentObj.StudentId != 0 ? "Update student" : "Create new student")</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="StudentObj.FirstName"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="StudentObj.FirstName" class="form-control" placeholder="First name..." />
                        <span asp-validation-for="StudentObj.FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="StudentObj.LastName"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="StudentObj.LastName" class="form-control" placeholder="Last name..." />
                        <span asp-validation-for="StudentObj.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="StudentObj.Email"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="StudentObj.Email" class="form-control" placeholder="Email..." />
                        <span asp-validation-for="StudentObj.Email" class="text-danger"></span>
                    </div>
                </div>

                @if (Model.StudentObj.StudentId == 0)
                {
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="StudentObj.DateEnrolled"></label>
                        </div>
                        <div class="col-9">
                            <input asp-for="StudentObj.DateEnrolled" type="date" class="form-control" />
                            <span asp-validation-for="StudentObj.DateEnrolled" class="text-danger"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="StudentObj.DateEnrolled"></label>
                        </div>
                        <div class="col-9">
                            <input asp-for="StudentObj.DateEnrolled" type="date" class="form-control" readonly="readonly" />
                            <span asp-validation-for="StudentObj.DateEnrolled" class="text-danger"></span>
                        </div>
                    </div>
                }


                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6 col-12">
                                @if (Model.StudentObj.StudentId == 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">
                                        <i class="far fa-edit"></i>&nbsp;Create
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">
                                        <i class="far fa-edit"></i>&nbsp;Update
                                    </button>
                                }

                            </div>
                            <div class="col-12">
                                <a asp-page="./Index" class="btn btn-success form-control">
                                    <i class="fas fa-arrow-circle-left"></i>&nbsp;Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
